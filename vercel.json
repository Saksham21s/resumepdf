{
  "version": 2,
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    { "src": "/generate-pdf", "dest": "/api/index.js" },
    { "src": "/resume-pdf", "dest": "/api/index.js" },
    { "src": "/render-template", "dest": "/api/index.js" },
    { "src": "/test-pdf", "dest": "/api/test-pdf.js" },
    { "src": "/", "dest": "/index.html" }
  ],
  "env": {
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true",
    "CHROMIUM_PATH": "https://github.com/Sparticuz/chromium/releases/download/v119.0.0/chromium-v119.0.0-pack.tar"
  }
}
